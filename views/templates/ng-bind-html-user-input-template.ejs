<div id="ng-bind-html-user-input">
  <h3>Ng-Bind-Html User Input <safe-circle></safe-circle></h3>

  <p style="margin-top: 12px;">The ng-bind-html directive does not call the $compile function so it is safe to include user input using any method. </p>
  
  <div style="font-size: 18px;">
		<code>$templateCache.put('htmlContentUrl', '&lt;div id=&quot;' + $scope.ngIncludeText + '&quot;&gt;&lt;/div&gt;'); </code><br/>
		<code>$scope.loadedDB = true; </code><br/> <br/>
		<code>// in the HTML (&lt;div ng-include=&quot;'htmlContentUrl'&quot; ng-if=&quot;loadedDB&quot;&gt;&lt;/div&gt;)</code>
	</div>

  <div class="compiled" ng-bind-html="sharedDynamicData.ngBindHtmlFull" style="display: none;"></div>

  <one-input-two-buttons 
  	input-text-key="ngBindHtmlText" 
  	input-text-model="sharedDynamicData.ngBindHtmlText"
		hack-input-text="hackSandBoxText"
		populate-button-label="Populate with Sandbox Escape Text"
		submit-button-label="Save"
		status-message="sharedDynamicData.statusMessage"
		is-dangerous="sharedDynamicData.isDangerous"
		is-safe="true"
		text-same-hack-label="Refresh page to see that the JS becomes string and is not executed"
		text-different-hack-label="Refresh page to see input stored"
		start-timer="startTimer()"></one-input-two-buttons>

  <div class="live">
		<code>&lt;div ng-bind-html=&quot;ngBindHtmlFull&quot;&gt;&lt;/div&gt;</code><br/>
		<code class="tab-1">{{sharedDynamicData.ngBindHtmlFull}}</code> <br/>
		<code>&lt;div&gt;&lt;/div&gt;</code>
	</div>
	
</div>